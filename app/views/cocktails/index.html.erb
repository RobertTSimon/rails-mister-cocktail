<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<div class="navbar-logo">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "cocktail_logo.jpg", class:"logo" %>
  <% end %>
</div>

  <h1>Cocktails!</h1>


  <div class="d-flex justify-content-end collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add a cocktail", "#", class: "nav-link" new_cocktail_path %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "robert.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "View your ingredients", "#", class: "dropdown-item" %>
          <%= link_to "Add an ingredient", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>



<div class="container">
  <h1>Your cocktails</h1>
    <div class="row">
      <% @cocktails.each do |cocktail|%>
      <div class="col-sm">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to cocktail.name, cocktail_path(cocktail) %> <br>
        </div>
      </div>
    <% end %>
    </div>
</div>

